@model DaysUntoWeb.Models.EditEventViewModel
<script src="~/Scripts/jquery.js"></script>
<script src="~/Scripts/bootstrap-modal.js"></script>
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<script type="text/javascript">
    $(function () {
        $('.datepicker').datepicker();
    });
</script>




<div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>Edit Event</h3>
</div>
<div class="modal-body">
    @using (Html.BeginForm("EditEvent", "Home", FormMethod.Post))
    {
        <fieldset>
            <div class="control-group">
                <!-- Username -->
                <label class="control-label" for="Name">Name</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.CalendarEvent.Name, new { @class = "input-xlarge", @required = "required" })
                </div>
            </div>
            <div class="control-group">
                <!-- E-mail -->
                <label class="control-label" for="CalendarEventDate">Date</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.CalendarEvent.CalendarEventDate, new { @Value = (String.Format("{0:MM/dd/yyyy}", Model.CalendarEvent.CalendarEventDate)), @class = "input-xlarge datepicker", @readonly = "readonly"})
                    
                </div>
            </div>
        <div class="control-group">
            <!-- Button -->
            <div class="controls">
                @Html.HiddenFor(m => m.CalendarEvent.CalendarEventId)
                <button class="btn btn-success" type="submit">Save</button>
            </div>
        </div>
            </fieldset>
    }
</div>
<div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
</div>
